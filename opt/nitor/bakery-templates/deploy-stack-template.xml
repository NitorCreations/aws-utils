<?xml version='1.0' encoding='UTF-8'?>
<project>
  <actions/>
  <description>Deploy {{stack}} with image {{image}} of type {{imagetype}}.&#xd;
&#xd;
Job updated {{updatetime}} from &quot;{{template}}&quot; by {{jobupdater}} {{jobupdaterbuild}}.</description>
  <keepDependencies>false</keepDependencies>
  <properties>
    <org.jenkinsci.plugins.blockqueuedjob.BlockItemJobProperty plugin="block-queued-job@0.2.0">
      <conditions>
        <org.jenkinsci.plugins.blockqueuedjob.condition.BuildingBlockQueueCondition>
          <project>{{jobupdater}}</project>
        </org.jenkinsci.plugins.blockqueuedjob.condition.BuildingBlockQueueCondition>
      </conditions>
    </org.jenkinsci.plugins.blockqueuedjob.BlockItemJobProperty>
    <com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty plugin="naginator@1.16.1">
      <optOut>false</optOut>
    </com.chikli.hudson.plugin.naginator.NaginatorOptOutProperty>
    <com.sonyericsson.rebuild.RebuildSettings plugin="rebuild@1.25">
      <autoRebuild>false</autoRebuild>
      <rebuildDisabled>false</rebuildDisabled>
    </com.sonyericsson.rebuild.RebuildSettings>
    <hudson.model.ParametersDefinitionProperty>
      <parameterDefinitions>
        <hudson.model.StringParameterDefinition>
          <name>AMI_ID</name>
          <description>AMI id to update the stack with. Leave empty to use latest {{image}} AMI.</description>
          <defaultValue></defaultValue>
        </hudson.model.StringParameterDefinition>
      </parameterDefinitions>
    </hudson.model.ParametersDefinitionProperty>
  </properties>
  <scm class="hudson.plugins.git.GitSCM" plugin="git@2.4.1">
    <configVersion>2</configVersion>
    <userRemoteConfigs>
      <hudson.plugins.git.UserRemoteConfig>
        <url>{{giturl}}</url>
        <credentialsId>CREDENTIALS_ID</credentialsId>
      </hudson.plugins.git.UserRemoteConfig>
    </userRemoteConfigs>
    <branches>
      <hudson.plugins.git.BranchSpec>
        <name>*/master</name>
      </hudson.plugins.git.BranchSpec>
    </branches>
    <doGenerateSubmoduleConfigurations>false</doGenerateSubmoduleConfigurations>
    <submoduleCfg class="list"/>
    <extensions>
      <hudson.plugins.git.extensions.impl.PathRestriction>
        <includedRegions>\Q{{image}}/stack-{{stack}}\E/.*</includedRegions>
        <excludedRegions>\Q{{image}}/image/\E.*</excludedRegions>
      </hudson.plugins.git.extensions.impl.PathRestriction>
    </extensions>
  </scm>
  <canRoam>true</canRoam>
  <disabled>true</disabled>
  <blockBuildWhenDownstreamBuilding>false</blockBuildWhenDownstreamBuilding>
  <blockBuildWhenUpstreamBuilding>true</blockBuildWhenUpstreamBuilding>
  <triggers>
    <com.cloudbees.jenkins.GitHubPushTrigger plugin="github@1.16.0">
      <spec></spec>
    </com.cloudbees.jenkins.GitHubPushTrigger>
  </triggers>
  <concurrentBuild>false</concurrentBuild>
  <builders>
    <hudson.tasks.Shell>
      <command>#!/bin/bash -ex

# Install tools
rm -rf aws-utils
if true ; then
  # latest release
  UTILS_VERSION=$AWSUTILS_VERSION
  mkdir -p aws-utils
  wget -O - https://github.com/NitorCreations/aws-utils/archive/$UTILS_VERSION.tar.gz | tar -xzf - --strip 3 -C aws-utils
else
  # latest commit
  git clone -b {{imagetype}} git@github.com:NitorCreations/aws-utils.git
  ( cd aws-utils ; ln -s opt/nitor/* . ; ln -s usr/bin/* . )
fi

./aws-utils/bakery-templates/deploy-stack.sh &quot;{{image}}&quot; &quot;{{stack}}&quot; &quot;$AMI_ID&quot; &quot;{{imagejob}}&quot;
</command>
    </hudson.tasks.Shell>
  </builders>
  <publishers/>
  <buildWrappers>
    <hudson.plugins.ansicolor.AnsiColorBuildWrapper plugin="ansicolor@0.4.2">
      <colorMapName>xterm</colorMapName>
    </hudson.plugins.ansicolor.AnsiColorBuildWrapper>
  </buildWrappers>
</project>
